{
  "expo": {
    "name": "NoteOnGo AI",
    "slug": "noteon-go-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "noteongo",
    "newArchEnabled": true,
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.noteongoai.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "NoteOnGo AI needs microphone access to record your voice notes.",
        "NSSpeechRecognitionUsageDescription": "NoteOnGo AI uses speech recognition to transcribe your voice notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.noteongoai.app",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-speech-recognition"
    ]
  }
}
