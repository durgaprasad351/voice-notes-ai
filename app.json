{
  "expo": {
    "name": "VoiceNotes AI",
    "slug": "voice-notes-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "scheme": "voicenotesai",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#0A0A0F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.voicenotesai.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "VoiceNotes AI needs microphone access to record your voice notes.",
        "NSSpeechRecognitionUsageDescription": "VoiceNotes AI uses speech recognition to transcribe your voice notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#0A0A0F"
      },
      "package": "com.voicenotesai.app",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-sqlite",
      "expo-speech-recognition"
    ]
  }
}
